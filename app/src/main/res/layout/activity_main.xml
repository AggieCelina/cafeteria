<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="aggiecelina.cafeteria.MainActivity">


    <RelativeLayout
        android:id="@+id/happy_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C0C0C0"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="Happy Hours?"
            android:textSize="25sp" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff="It's OFF"
            android:textOn="It's ON"
            android:id="@+id/happy_hours"
            android:onClick="onClickHappyHours"

            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/coffee_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/coffee"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coffee"
                android:onClick="selectCoffee"/>

            <TextView
                android:id="@+id/coffee_price"
                android:layout_width="120dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/coffee"
                android:layout_centerVertical="true"
                android:text="5 PLN"
                android:textSize="30sp" />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton

                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coffee_2"
                android:id="@+id/coffee_2"
                android:onClick="selectCoffee2"/>

            <TextView
                android:id="@+id/coffe_2_price"
                android:layout_width="120dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/coffee_2"
                android:text="10 PLN"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ice_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton

                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ice"
                android:id="@+id/ice_image"
                android:onClick="selectIce"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:text="15 PLN"
                android:textSize="30sp"
                android:layout_below="@id/ice_image" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/tea"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tea"
                android:onClick="selectTea"/>

            <TextView
                android:layout_width="120dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:text="20 PLN"
                android:textSize="30sp"
                android:layout_below="@id/tea"/>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/suma_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#C0C0C0"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/basket"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:text="0"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>